{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"sourceMap": false,
		"outDir": "./",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"types": ["node"],
		"esModuleInterop": true, 
		"experimentalDecorators": true,
		"plugins": [
			{ "name": "typescript-tslint-plugin" }
		]
	},
	"include": ["src"],
	"exclude": [
		"node_modules"
	]
}